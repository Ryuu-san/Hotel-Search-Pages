.container-checkbox-buttons__gender-selection
    +textBlock('container-checkbox-buttons__gender-selection-title','Radio Buttons')
    .container-checkbox-buttons__radio
        .container-checkbox-buttons__radio-male
            input(type="radio" name="r1" id="r1" checked)
            label(for="r1" class="container-checkbox-buttons__radio-text") Мужчина
        .container-checkbox-buttons__radio-female
            input(type="radio" name="r1" id="r2")
            label(for="r2" class="container-checkbox-buttons__radio-text") Женщина